<Window x:Class="MapEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Editor" Height="600" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <Label x:Name="lblEncryptStatus" Content="" HorizontalAlignment="Left" Margin="432,64,0,0" VerticalAlignment="Top"/>
        <Menu Height="25" VerticalAlignment="Top" Width="792" HorizontalAlignment="Left">
            <MenuItem Header="_File">
                <MenuItem x:Name="mnuLoadTextures" Header="Load _Textures" Click="mnuLoadTextures_Click"/>
                <MenuItem x:Name="mnuLoadItems" Header="Load _Items" Click="mnuLoadItems_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit"/>
        </Menu>
        <WrapPanel x:Name="pnlTextures" HorizontalAlignment="Left" Height="231" Margin="0,25,0,0" VerticalAlignment="Top" Width="272" Background="#FFECECEC" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" ItemHeight="34" ItemWidth="34" MaxWidth="272"/>

    </Grid>
</Window>
