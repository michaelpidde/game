<Window x:Class="MapEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Editor" Height="550" Width="700" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lblEncryptStatus" Content="" HorizontalAlignment="Left" Margin="432,64,0,0" VerticalAlignment="Top"/>
        <Menu x:Name="menu" Height="24" VerticalAlignment="Top" BorderThickness="1">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF6F6F6" Offset="0.046"/>
                    <GradientStop Color="#FFEAE8E8"/>
                    <GradientStop Color="#FFDCD9D9" Offset="0.8"/>
                    <GradientStop Color="#FFBFBFBF" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="Help"/>
        </Menu>
        <DockPanel x:Name="dockTextures" HorizontalAlignment="Left" Height="292" LastChildFill="False" Margin="0,29,0,0" VerticalAlignment="Top" Width="168" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True"/>

    </Grid>
</Window>
